<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <TextView android:id="@+id/save_name"
            		    	android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"
            		    	style="@android:style/TextAppearance.Medium"
            		    	/>
    <TextView android:id="@+id/save_value"
            		    	android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"
            		    	style="@android:style/TextAppearance.Medium"
            		    	/>
    <TextView android:id="@+id/save_ability_score"
            			    android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"/>
	<EditText android:id="@+id/save_class"
            			    android:inputType="number"
            			    android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"/>
	<EditText android:id="@+id/save_misc"
            			    android:inputType="number"
            			    android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"/>
    <TextView android:id="@+id/save_buff"
            		    	android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"
            		    	style="@android:style/TextAppearance.Medium"
            		    	/>
</LinearLayout>