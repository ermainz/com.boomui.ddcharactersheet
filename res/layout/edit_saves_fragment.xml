<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
   	 	<TextView android:id="@+id/modifier"
            			    android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"
            		    	style="@android:style/TextAppearance.Medium"
            		    	android:layout_weight="1"
            		    	android:gravity="right"/>
   	 	
   	 	   	 	<TextView android:id="@+id/save_ability_score"
            			    android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"
            		    	style="@android:style/TextAppearance.Medium"
            		    	android:layout_weight="1"/>
		<TextView android:text="Class:"
            			    android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"
            		    	style="@android:style/TextAppearance.Medium"
            		    	android:layout_weight="1"
            		    	android:gravity="right"/>
		<EditText android:id="@+id/save_class"
            			    android:inputType="numberSigned"
            			    android:selectAllOnFocus="true"
            			    android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"
            		    	style="@android:style/TextAppearance.Medium"
            		    	android:layout_weight="1"/>
		<TextView android:text="Misc:"
            			    android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"
            		    	style="@android:style/TextAppearance.Medium"
            		    	android:layout_weight="1"
            		    	android:gravity="right"/>


		
		<EditText android:id="@+id/save_misc"
            			    android:inputType="numberSigned"
            			    android:selectAllOnFocus="true"
            			    android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"
            		    	style="@android:style/TextAppearance.Medium"
            		    	android:layout_weight="1"/>
		
		<TextView android:text="Buff: "
            		    	android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"
            		    	style="@android:style/TextAppearance.Medium"
            		    	android:layout_weight="1"
            		    	android:gravity="right"/>
		
    	<TextView android:id="@+id/save_buff"
            		    	android:layout_width="wrap_content"
            		    	android:layout_height="wrap_content"
            		    	style="@android:style/TextAppearance.Medium"
            		    	android:layout_weight="1"
            		    	/>
</LinearLayout>